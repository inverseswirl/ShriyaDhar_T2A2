

<h3 class="headline ">Enter new customer details</h3>

<%= form_with  model: @customer do |f|%>

    <p style ="padding-top: 30px;"> <strong><%= f.label :name, "Enter your name" %></strong></p>
      <%= f.text_field :name %><br>
       <% @customer.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
      <% end %><br>
    <p style ="padding-top: 30px;">  <strong><%= f.label :email, "Your Email" %></strong></p>
      <%= f.text_field :email %><br>
       <% @customer.errors.full_messages_for(:email).each do |message| %>
          <div><%= message %></div>
      <% end %>
    <p style=" font-size:1rem;"><strong> <%= f.submit "Register" %></strong><p>

<% end %>
   <br>

