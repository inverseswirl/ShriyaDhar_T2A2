<h1>Welcome to the Vendor product listing! </h1>

<%= form_with model: @products, url: "/medical_products", method: :post do |form| %>
  <div class="container-flex">
  <div class="field">
    <%= form.label :product_name %><br>
    <%= form.text_field :product_name %>
  </div>
  <div class="field">
    <%= form.label :product_type %><br>
    <%= form.text_field :product_type %>
  </div>

  <div class="field">
    <%= form.label :product_description %><br>
    <%= form.text_area :product_description %>
  </div>

  <div class="field">
    <%= form.label :vendor_id, id: "vendor_if" %><br>
    <%= form.number_field :vendor_id, min: 1, max: 5 %>
  </div>

  <div class="field">
    <%= form.label :category %><br>
   <%= form.number_field :selling_price, in: 1.0..130.0,  step: 0.1 %>
  </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

